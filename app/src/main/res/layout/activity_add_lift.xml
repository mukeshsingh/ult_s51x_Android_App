<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ddddd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddLiftActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/user_header"/>
    <LinearLayout
        android:id="@+id/llPinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">

        <TextView
            android:id="@+id/txt_lift_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/add_lift_txt_lift_name"
            android:fontFamily="@font/lato_medium"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/add_lift_txt_desc"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:justificationMode="inter_word" />

        <EditText
            android:id="@+id/edtPin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/password_border"
            android:ems="10"
            android:textColorHint="@color/grey"
            android:hint="@string/add_lift_txt_title"
            android:fontFamily="@font/lato_regular"
            android:inputType="numberPassword"
            android:autofillHints=""
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="35dp"
            android:text="@string/Connect"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/lato_semibold"
            app:backgroundTint="@color/lightGreen"
            android:background="@drawable/button_border"
            app:layout_constraintTop_toBottomOf="@+id/llPinLayout" />

    </LinearLayout>

    <include
        android:id="@+id/footer"
        layout="@layout/home_back_bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <include
        android:id="@+id/option_menu"
        layout="@layout/option_menu" />
</RelativeLayout>