<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProductsActivity"
    android:orientation="vertical"
    android:layout_margin="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:text="Select the type of lift you are linking"
        android:textColor="@android:color/black"
        android:fontFamily="@font/lato_regular"
        android:textSize="25sp"
        android:gravity="center"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        >

        <LinearLayout
            android:id="@+id/stair_lift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/stair_lift"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="5dp"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Stairlift"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        >

        <LinearLayout
            android:id="@+id/vertical_lift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/vertical_lift"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Vertical Lift"
                android:textColor="@android:color/black"
                android:fontFamily="@font/lato_regular"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout><LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    >

    <LinearLayout
        android:id="@+id/inclined_lift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/inclined_lift"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Inclined Lift"
            android:textColor="@android:color/black"
            android:fontFamily="@font/lato_regular"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout><LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    >

    <LinearLayout
        android:id="@+id/elevator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/elevator"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Elevator"
            android:textColor="@android:color/black"
            android:fontFamily="@font/lato_regular"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="18sp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_green_bg"
        app:backgroundTint="#99CC33"/>


</LinearLayout>