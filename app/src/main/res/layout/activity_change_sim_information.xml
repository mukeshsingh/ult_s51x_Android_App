<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ChangeSimInformationActivity"
    android:background="@color/white">
    <include
        android:id="@+id/toolbar"
        layout="@layout/user_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/footer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/sim_information"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIM Information"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/lato_bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:id="@+id/ll_sim_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose SIM Style"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:fontFamily="@font/lato"
                    android:layout_marginTop="30dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />

                <com.ultrontech.s515liftconfigure.wheelpicker.LoopView
                    android:id="@+id/loopView"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose SIM Style"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:fontFamily="@font/lato"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_no_pin"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:text="No PIN"
                        android:textSize="16sp"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/enableBtn"
                        app:strokeColor="@color/enableBtn"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/disableBtn"
                        android:visibility="gone"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pin_required"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:text="PIN Required"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        app:strokeColor="@color/enableBtn"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/enableBtn"
                        android:visibility="gone"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_no_pin_enable"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:text="No PIN"
                        android:textSize="16sp"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        app:strokeColor="@color/enableBtn"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/enableBtn"
                        android:visibility="visible"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pin_required_disabled"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:text="PIN Required"
                        android:textSize="16sp"
                        android:textColor="@color/enableBtn"
                        app:strokeColor="@color/enableBtn"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/disableBtn"
                        android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sim_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Lift Pin Number"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />

                <EditText
                    android:id="@+id/edit_text_enter_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Select New Pin"
                    android:inputType="text"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="16sp"
                    android:textColorHint="@color/lightGrey"
                    android:textColor="@color/black"
                    android:padding="12dp"
                    android:background="@drawable/edittext_outline" />
                <EditText
                    android:id="@+id/edit_text_confirm_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm New Pin"
                    android:inputType="text"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="16sp"
                    android:textColorHint="@color/lightGrey"
                    android:textColor="@color/black"
                    android:padding="12dp"
                    android:background="@drawable/edittext_outline" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pin_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose PIN Length"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:id="@+id/txt_pin_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="80sp"
                        android:gravity="center"
                        android:fontFamily="@font/lato_light"
                        android:textColor="#828282"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp" />

                    <SeekBar
                        android:id="@+id/sim_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:max="8"
                        android:progress="5"
                        android:progressDrawable="@drawable/progress"
                        android:thumb="@drawable/thumb"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm_sim_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="18sp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button_green_bg"
                app:backgroundTint="#99CC33"/>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/home_back_bottom_bar"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
