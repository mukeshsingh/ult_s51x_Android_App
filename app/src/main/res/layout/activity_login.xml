<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <include
        android:id="@+id/toolbar"
        layout="@layout/user_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:padding="32dp">
    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_engineer_pin_code_in_the_box_below_press_login_to_continue"
        android:textSize="16sp"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ll_err_msg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wrong_pin"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/dark_red"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lato_bold"
            android:layout_marginBottom="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_again"
            android:textSize="16sp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp" />

    </LinearLayout>
    <EditText
        android:id="@+id/edit_text_engineer_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:padding="20dp"
        android:maxLength="8"
        android:hint="@string/enter_pin"
        android:textColorHint="@color/lightGrey"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:textSize="18sp"
        android:background="@drawable/edittext_outline" />


    <Button
        android:id="@+id/btn_engineer_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="18sp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_green_bg"
        app:backgroundTint="#99CC33"/>
    </LinearLayout>
</LinearLayout>
