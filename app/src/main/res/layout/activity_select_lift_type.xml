<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLiftTypeActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <include
        android:id="@+id/toolbar"
        layout="@layout/user_header" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:text="Select the type of lift you are linking"
            android:textColor="@android:color/black"
            android:fontFamily="@font/lato_regular"
            android:textSize="25sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_background"
            android:elevation="4dp">
            <LinearLayout
                android:id="@+id/stair_lift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                android:background="@drawable/rounded_corner_bg">
                <ImageView
                    android:id="@+id/img_stair_lift"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/stair_lift"
                    android:layout_marginVertical="10dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_border_color"
                    android:layout_marginLeft="5dp" />
                <LinearLayout
                    android:id="@+id/stair_lift_bg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_bg_right_disable">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Stairlift"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:id="@+id/vertical_lift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                android:background="@drawable/rounded_corner_bg">

                <ImageView
                    android:id="@+id/img_vertical_lift"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/vertical_lift"
                    android:layout_marginVertical="10dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_border_color"
                    android:layout_marginLeft="5dp" />
                <LinearLayout
                    android:id="@+id/vertical_lift_bg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_bg">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Vertical Lift"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:id="@+id/inclined_lift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                android:background="@drawable/rounded_corner_bg">

                <ImageView
                    android:id="@+id/img_inclined_lift"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/inclined_lift"
                    android:layout_marginVertical="10dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_border_color"
                    android:layout_marginLeft="5dp"
                    />
                <LinearLayout
                    android:id="@+id/inclined_lift_bg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_bg_right_disable">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Inclined Lift"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:id="@+id/elevator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                android:background="@drawable/rounded_corner_bg">

                <ImageView
                    android:id="@+id/img_elevator"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/elevator"
                    android:layout_marginVertical="10dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_border_color"
                    android:layout_marginLeft="5dp" />
                <LinearLayout
                    android:id="@+id/elevator_bg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_bg_right_disable">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Elevator"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="18sp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button_green_bg"
            app:backgroundTint="#99CC33"/>
    </LinearLayout>
    <include android:id="@+id/footer"
        layout="@layout/home_back_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"/>
    <include
        android:id="@+id/option_menu"
        layout="@layout/option_menu" />
</RelativeLayout>