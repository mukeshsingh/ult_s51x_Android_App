<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.LoginPinFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_lift_name"
            android:layout_width="316dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/add_lift_txt_lift_name"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_current_pin"
            android:layout_width="316dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/current_lift_pin_number"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_lift_name" />

        <TextView
            android:id="@+id/txt_current_pinNumber"
            android:layout_width="316dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"
            android:text="123456"
            android:textColor="@color/lightGrey"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_current_pin" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="316dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/enter_the_new_pin_number"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_current_pinNumber" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="316dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/add_lift_txt_desc"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" />

        <LinearLayout
            android:id="@+id/llPinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_desc">

            <EditText
                android:id="@+id/edtPin1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/password_border"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtPin2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                android:layout_weight="1"
                android:background="@drawable/password_border"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtPin3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                android:layout_weight="1"
                android:background="@drawable/password_border"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtPin4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                android:layout_weight="1"
                android:background="@drawable/password_border"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtPin5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                android:layout_weight="1"
                android:background="@drawable/password_border"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtPin6"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"

                android:layout_weight="1"
                android:background="@drawable/password_border"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            app:backgroundTint="@color/grey"
            android:padding="15dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPinLayout" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="25dp"
            app:backgroundTint="@color/green"
            android:padding="15dp"
            android:text="Update"
            android:textColor="@color/lightGrey"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPinLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>