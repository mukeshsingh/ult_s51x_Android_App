<!-- res/drawable/top_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top Border -->
    <item
        android:top="0dp"
        android:left="-1dp"
        android:right="-1dp">
        <shape>
            <solid android:color="@color/grey_border_color" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Background -->
    <item android:top="1dp">
        <shape>
            <solid android:color="@color/white" /> <!-- Background color -->
        </shape>
    </item>
</layer-list>
